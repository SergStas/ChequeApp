<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    tools:context=".ui.auth.AuthLoginFragment"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/auth_login_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text="@string/auth_login_tv_title"
        android:textSize="28sp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/auth_login_et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/auth_login_et_username"
        android:autofillHints="username"
        android:inputType="text" />

    <TextView
        android:id="@+id/auth_login_tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f00"
        android:visibility="gone"
        tools:visibility="visible"
        android:textAlignment="center"
        android:text="@string/auth_login_tv_error" />

    <Button
        android:id="@+id/auth_login_b_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/auth_login_b_submit" />

    <TextView
        android:id="@+id/auth_login_tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auth_login_tv_register"
        android:layout_marginTop="15dp"
        android:layout_gravity="center" />

</LinearLayout>